<?xml version="1.0"?>
<project name="NeHe.Lesson01">
    <target name="build">
        <echo message="Build Directory is ${examples.build.directory}" />
        <csc target="winexe" warnaserror="false" unsafe="false" debug="${build.debug}" optimize="${build.optimize}" output="${examples.build.directory}/${nant.project.name}.exe" define="${build.debug.define};">
            <references basedir="${framework.build.directory}">
                <include name="Tao.OpenGl.dll" />
                <include name="Tao.Platform.Windows.dll" />
            </references>
            <sources failonempty="true">
                <include name="${examples.projects.directory}/${nant.project.name}/AssemblyInfo.cs" />
                <include name="${examples.projects.directory}/${nant.project.name}/Lesson01.cs" />
            </sources>
        </csc>
        <copy file="${examples.solutions.directory}/NeHe/Solution Items/NeHe.License.txt" todir="${examples.build.directory}" />
        <copy file="${examples.solutions.directory}/NeHe/Solution Items/NeHe.Readme.txt" todir="${examples.build.directory}" />
    </target>

    <target name="clean">
        <delete file="${examples.build.directory}/${nant.project.name}.exe" failonerror="false" />
        <delete file="${examples.build.directory}/${nant.project.name}.pdb" failonerror="false" />
        <delete file="${examples.build.directory}/NeHe.License.txt" failonerror="false" />
        <delete file="${examples.build.directory}/NeHe.Readme.txt" failonerror="false" />
    </target>
</project>
